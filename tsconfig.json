{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "typeRoots": ["./src/types","./types",
            "./node_modules/@types/"]
    },
    "include": ["src/**/*", "config/*"]
}
